<%- include ('partials/top') %>
    <div class="row space">
      <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
        <h3 class="title text-black">Departments</h3>
        <div>
          <a href="/departments/new" class="btn btn-success">Create New Department</a>
        </div>
      </div> 
    </div>

    <div class="row">
      <div class="col-12">
        <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Departments</h4>
        <table class="table table-bordered table-striped">
          <thead class="font-weight-normal">
            <tr>
              <td>ID</td>
              <td>Title</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% departments.forEach((m) => { %>
              <tr>
                <td><%= m._id %></td>
                <td><%= m.name %></td>
                <td>
                  <a href='<%= "/departments/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
                </td>
              </tr>
            <% }) %>          
          </tbody>
        </table>
      </div>
    </div>
  </main>
</div>

</div>
    

<%- include ('partials/bottom') %>