<%- include ('partials/top') %>
    <div class="row space">
      <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
        <h3 class="title text-black">Admins</h3>
        <div>
          <a href="/admins/new" class="btn btn-success">Create New Admin</a>
        </div>
      </div> 
    </div>

    <div class="row">
      <div class="col-12">
        <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Admins</h4>
        <table class="table table-bordered table-striped">
          <thead class="font-weight-normal">
            <tr>
              <td>Username</td>
              <td>First Name</td>
              <td>Surname</td>
              <td>Email</td>
              <td></td>
            </tr>
          </thead>
          <tbody>
            <% admins.forEach((m) => { %>
              <tr>
                <td><%= m.username %></td>
                <td><%= m.first_name %></td>
                <td><%= m.surname %></td>
                <td><%= m.email %></td>
                <td>
                  <a href='<%= "/admins/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
                </td>
              </tr>
            <% }) %>          
          </tbody>
        </table>
      </div>
    </div>
  </main>
</div>

</div>
    

<%- include ('partials/bottom') %>